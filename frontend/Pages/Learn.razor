@page "/learn"

<PageTitle>Learn Chess - Chess Academy</PageTitle>

<div class="learn-container">
    <div class="learn-header">
        <h1>Learn Chess</h1>
        <p>Choose your learning path and start improving your game</p>
    </div>
    
    <div class="learning-paths">
        <div class="path-section">
            <h2>Fundamentals</h2>
            <div class="path-grid">
                <a href="/learn/basics" class="learn-card basics-card">
                    <div class="card-icon">♟️</div>
                    <h3>Chess Basics</h3>
                    <p>Learn piece movements, rules, and board coordinates</p>
                    <div class="card-progress">
                        <span class="difficulty">Beginner</span>
                    </div>
                </a>
                
                <a href="/learn/coordinates" class="learn-card coordinates-card">
                    <div class="card-icon">📍</div>
                    <h3>Board Vision</h3>
                    <p>Master square coordinates and improve board awareness</p>
                    <div class="card-progress">
                        <span class="difficulty">Beginner</span>
                    </div>
                </a>
            </div>
        </div>
        
        <div class="path-section">
            <h2>Strategic Play</h2>
            <div class="path-grid">
                <a href="/learn/openings" class="learn-card openings-card">
                    <div class="card-icon">📚</div>
                    <h3>Opening Theory</h3>
                    <p>Study popular openings and opening principles</p>
                    <div class="card-progress">
                        <span class="difficulty">Intermediate</span>
                    </div>
                </a>
                
                <a href="/learn/tactics" class="learn-card tactics-card">
                    <div class="card-icon">⚔️</div>
                    <h3>Tactics Training</h3>
                    <p>Practice forks, pins, skewers, and other tactical patterns</p>
                    <div class="card-progress">
                        <span class="difficulty">All Levels</span>
                    </div>
                </a>
                
                <a href="/learn/strategy" class="learn-card strategy-card">
                    <div class="card-icon">🎯</div>
                    <h3>Positional Play</h3>
                    <p>Understand pawn structures, weak squares, and piece placement</p>
                    <div class="card-progress">
                        <span class="difficulty">Advanced</span>
                    </div>
                </a>
            </div>
        </div>
        
        <div class="path-section">
            <h2>Mastery</h2>
            <div class="path-grid">
                <a href="/learn/endgames" class="learn-card endgames-card">
                    <div class="card-icon">👑</div>
                    <h3>Endgame Mastery</h3>
                    <p>Essential endgames and checkmate patterns</p>
                    <div class="card-progress">
                        <span class="difficulty">Intermediate</span>
                    </div>
                </a>
                
                <a href="/learn/checkmates" class="learn-card checkmates-card">
                    <div class="card-icon">💀</div>
                    <h3>Checkmate Patterns</h3>
                    <p>Learn common mating patterns and techniques</p>
                    <div class="card-progress">
                        <span class="difficulty">All Levels</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <div class="coming-soon">
        <h3>Coming Soon</h3>
        <p>Track your progress, earn achievements, and compete on leaderboards!</p>
    </div>
</div>

